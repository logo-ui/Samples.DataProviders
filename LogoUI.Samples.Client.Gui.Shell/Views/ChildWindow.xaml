<UserControl x:Class="LogoUI.Samples.Client.Gui.Shell.Views.ChildWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:viewModels1="clr-namespace:LogoUI.Samples.Client.Gui.Shell.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels1:ChildWindowViewModel}"
             d:DesignHeight="300" 
             d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Grid.RowSpan="3" 
                Background="Black"
                Opacity="0.4" />

        <Grid Grid.Row="1" Margin="24">
            <ContentControl cal:View.Model="{Binding ActiveItem}" 
                            cal:View.Context="{Binding Context}" />
        </Grid>
    </Grid>
</UserControl>
